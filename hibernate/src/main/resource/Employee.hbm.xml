<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.techworld.hibernate.model.Employee" table="employee">
        <meta attribute="class-description">
            This is employee class description. Each employee has attributes fName,lName and salary
        </meta>
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="fName" column="fName" type="java.lang.String"/>
        <property name="lName" column="lName" type="java.lang.String"/>
        <property name="salary" column="salary" type="java.lang.Integer"/>
    </class>
</hibernate-mapping>